FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["WebApplication18/WebApplication18.csproj", "WebApplication18/"]
RUN dotnet restore "WebApplication18/WebApplication18.csproj"
COPY . .
WORKDIR "/src/WebApplication18"
RUN dotnet build "WebApplication18.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "WebApplication18.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "WebApplication18.dll"]
